<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:gravity="center_horizontal"
	android:paddingTop="60dip"
	android:background="@drawable/loginbk">
	<LinearLayout android:id="@+id/liuser"
	android:paddingTop="25dip"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">
	
	    <TextView 
	    	android:layout_width="60dip" 
	    	android:layout_height="wrap_content" 
	    	android:text="用户名"
	    ></TextView>
	    <EditText 
	    	android:layout_width="200dip"
	    	android:layout_height="wrap_content"
	    	/>
	</LinearLayout>
		<LinearLayout android:id="@+id/lipwd"
		android:paddingTop="10dip"
		android:layout_below="@id/liuser"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">
	
	    <TextView 
	    	android:layout_width="60dip" 
	    	android:layout_height="wrap_content" 
	    	android:text="密  码"
	    ></TextView>
	    <EditText 
	    	android:layout_width="200dip"
	    	android:layout_height="wrap_content"
	    	/>
	</LinearLayout>
		
		<LinearLayout 
		android:paddingTop="15dip"
		android:layout_below="@id/lipwd"
		android:gravity="right"
	android:layout_width="260dip"
	android:layout_height="wrap_content">
	
		<ImageButton android:id="@+id/btnexit"
			
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/exit"/>
	 	 <TextView 
	    	android:layout_width="15dip" 
	    	android:layout_height="wrap_content" 
	    	></TextView>
		
				<ImageButton android:id="@+id/btnlogin"
			
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/login"
			/>
	</LinearLayout>
</RelativeLayout>